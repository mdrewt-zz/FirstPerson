#black_div
  %h2 The Top Players!
  #board
    %table
      %th First Name
      %th Last Name
      %th Total Xp
      %th Quests Completed
      - @users.sort_by {|user| -user.total_xp}.each do |user|
        %tr
          %td
            =user.firstname
          %td
            =user.lastname
          %td
            =user.total_xp
          %td
            =user.user_quests.where(completed: true).count
  %br
  %h2 Most Completed Quests!
  #board
    %table
      %th First Name
      %th Last Name
      %th Total Xp
      %th Quests Completed
      - @users.sort_by {|user| -user.completed_quests.length}.each do |user|
        %tr
          %td
            =user.firstname
          %td
            =user.lastname
          %td
            =user.total_xp
          %td
            =user.completed_quests.length

