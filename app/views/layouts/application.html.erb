<!DOCTYPE html>
<html>
<head>
  <title>FirstPerson</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => false %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => false %>
  <%= csrf_meta_tags %>
  <%= javascript_include_tag "https://maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" %>
  <%= javascript_include_tag "https://google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" %>
</head>
<body>

    <div id="main-nav" class="sidebar" >
      <% if logged_in? %>
        <%= button_to "Sign Out", "/logout", { method: :get, class: "button" } %>
      <% else %>
        <%= button_to 'Sign In', foursquare_path, { method: :get, class: "button" } %>
      <% end %>
      <%= button_to "Map", root_path, { method: :get, class: "button" } %>
      <%= button_to "About", root_path, { method: :get, class: "button" } %>
      <%= button_to "Contact Us", root_path, { method: :get, class: "button" } %>
    </div>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

  <%= yield %>

</body>
</html>

